#!/usr/bin/env raku
my $sol = $*PROGRAM.IO.basename.Str; $sol ~~ s/sol//; say qq:to/HERE/; 
Solution $sol:\n==========
HERE 

# sol 2
class Box {
    has$.ulx;has$.uly;               has$.urx;has$.ury;


                                                has$.h;


    has$.llx;has$.lly;    has$.w;    has$.lrx;has$.lry;

    method width {
        $!urx - $!llx
    }
}
my ($llx, $lly, $urx, $ury) = 0, 0, 2, 3;
my $o = Box.new: :$llx, :$lly, :$urx, :$ury;
say $o.raku;
say $o.width;
